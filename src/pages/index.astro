---
import '@fontsource-variable/honk/full.css';
import '../styles/global.css';
---
<style is:global>
@font-palette-values --colorTitle {
  font-family: 'Honk Variable';
  override-colors:
    0 black,
    1 black,
    2 #FF7D8B,   /* Felle, warme roze tint */
    3 #F66C9A,   /* Donkerder roze, een stap intenser */
    4 #F48BB1,   /* Iets lichter dan de vorige, maar nog steeds fel roze */
    5 #D186E8,   /* Lichte, frisse lavendelpaars */
    6 #9A64D9,   /* Medium paarse tint met wat diepte */
    7 #7A4EC3;   /* Donkere paarse tint die het afsluit */
}

body {
	background-color: #FDEDEC;
}

.main {
	display: flex;
	justify-content: center;
	height: 35rem;
	container-type: size;
}

.home__title {
	font-family: 'Honk Variable';
	font-palette: --colorTitle;
}

@container (orientation: portrait) {
	.home__title {
		font-size: 7rem;
		text-transform: uppercase;
		line-height: 1;
		font-variation-settings: "MORF" 15, "SHLN" 0;
		writing-mode: vertical-lr;
		text-orientation: upright;
		letter-spacing: -.6em;
	}

}

@container (orientation: landscape) {
	.home__title {
		font-size: 16rem;
		line-height: .8;
		font-variation-settings: "MORF" 15, "SHLN" 45;
		margin-top: auto;
		margin-left: 6rem;
	}
}

</style>

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<main class="main">
			<h1 class="home__title">Josee<br/> Wouters</h1>
		</main>
	</body>
</html>
